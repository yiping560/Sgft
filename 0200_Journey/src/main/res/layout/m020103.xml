<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="@dimen/p10"
    tools:context=".M020103" >

    <TextView
        android:id="@+id/m020103_t001"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/Silver"
        android:gravity="center_horizontal"
        android:text="@string/app_name"
        android:textColor="@color/Purple"
        android:textSize="@dimen/fontsize"
        android:textStyle="bold" />

    <Button
        android:id="@+id/m020103_b001"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/m0201_03_b001"
        android:textColor="@color/Purple"
        android:textSize="@dimen/fontsize"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/Silver"
        android:padding="@dimen/p10">

        <TextView
            android:id="@+id/m020103_t002"
            android:layout_width="126dp"
            android:layout_height="49dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:text="@string/m0201_03_t002"
            android:textColor="@color/Black"
            android:textSize="@dimen/fontsize"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/m020103_s001"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/m020103_t002"
            android:background="@android:drawable/btn_dropdown"
            android:entries="@array/m0201_03_a001"
            android:spinnerMode="dialog"
            android:textSize="@dimen/fontsize"
            tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck,DuplicateSpeakableTextCheck" />

        <TextView
            android:id="@+id/m020103_t004"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/m020103_s001"
            android:layout_marginStart="10dp"
            android:layout_marginTop="1dp"
            android:layout_toEndOf="@+id/m020103_s001"
            android:text="@string/m0201_03_t007"
            android:textColor="@color/Black"
            android:textSize="@dimen/fontsize"
            android:textStyle="bold" />

        <Button
            android:id="@+id/m020103_b002"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/m020103_s001"
            android:layout_marginTop="28dp"
            android:background="@android:drawable/btn_default"
            android:gravity="center"
            android:text="@string/m0201_03_t009"
            android:textColor="@color/Black"
            android:textSize="@dimen/fontsize"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/m020103_t003"
            android:layout_width="126dp"
            android:layout_height="49dp"
            android:layout_below="@+id/m020103_t002"
            android:layout_alignParentStart="true"
            android:layout_marginTop="80dp"
            android:gravity="center"
            android:text="@string/m0201_03_t003"
            android:textColor="@color/Black"
            android:textSize="@dimen/fontsize"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/m020103_s002"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/m020103_t002"
            android:layout_alignEnd="@+id/m020103_s001"
            android:layout_marginTop="80dp"
            android:background="@android:drawable/btn_dropdown"
            android:entries="@array/m0201_03_a001"
            android:spinnerMode="dialog"
            android:textSize="@dimen/fontsize"
            tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

        <TextView
            android:id="@+id/m020103_t005"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/m020103_s001"
            android:layout_marginStart="10dp"
            android:layout_marginTop="89dp"
            android:layout_toEndOf="@+id/m020103_s002"
            android:text="@string/m0201_03_t005"
            android:textColor="@color/Black"
            android:textSize="@dimen/fontsize"
            android:textStyle="bold" />
    </RelativeLayout>
</LinearLayout>